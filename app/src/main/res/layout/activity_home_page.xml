<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.bitinsider.HomePage">

    <Button
        android:id="@+id/firstButtonHome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="first year"
        android:layout_marginTop="200dp"
        android:width="200dp"
        android:padding="60dp"
        />

    <Button
        android:layout_width="200dp"
        android:id="@+id/secondButtonHome"
        android:text="second year"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:width="200dp"
        android:layout_height="137dp" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/thirdButtonHome"
        android:text="third year"
        android:layout_marginTop="400dp"
        android:layout_height="137dp" />

    <Button
        android:layout_width="200dp"
        android:id="@+id/fourthButtonHome"
        android:text="fourth year"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="400dp"
        android:layout_height="137dp" />

    <ImageButton
        android:layout_width="75dp"
        android:id="@+id/homeButtonHome"
        android:layout_marginTop="750dp"
        android:layout_height="75dp" />

    <ImageButton
        android:layout_width="75dp"
        android:id="@+id/chatButtonHome"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="750dp"
        android:layout_height="75dp" />

    <ImageButton
        android:layout_width="75dp"
        android:id="@+id/profileButtonHome"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="750dp"
        android:layout_height="75dp" />
</RelativeLayout>
